<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<crops>
    <!--
    Syntax of this file is strict subset of Seasons19 crops.xml mod by Realismus Modding.

    For instance, one may copy crops.xml directly from favourite Seasons_GEO mod, and still get meaningful results.

    Hopefully.
    -->
    <annotation>Copyright (c) Realismus Modding, 2019</annotation>
    <version>2</version>

    <growth overwrite="true">
        <defaultCrops>
            <defaultCrop name="BARLEY"/>
            <defaultCrop name="OAT"/>
            <defaultCrop name="WHEAT"/>
            <defaultCrop name="CANOLA"/>
            <defaultCrop name="MAIZE"/>
            <defaultCrop name="SOYBEAN"/>
            <defaultCrop name="SUNFLOWER"/>
            <defaultCrop name="POTATO"/>
            <defaultCrop name="SUGARBEET"/>
            <defaultCrop name="POPLAR"/>
            <defaultCrop name="GRASS"/>
            <defaultCrop name="OILSEEDRADISH"/>
            <defaultCrop name="WEED"/>
            <defaultCrop name="DRYGRASS"/>
            <defaultCrop name="SUGARCANE"/>
            <defaultCrop name="COTTON"/>
            <defaultCrop name="SORGHUM" />
            <defaultCrop name="GRAPE" />
            <defaultCrop name="OLIVE" />
			<defaultCrop name="MEADOW" />
        </defaultCrops>
    </growth>
    <fruitTypes>
        <!--
        When adding growth for new crops the following at a minimum need to be defined in this section.

        <fruitType name="NEW_CROP">
            <rotation category="CEREAL" returnPeriod="2" />
        </fruitType>

        Note: new category cannot be added (as it was in case of Seasons19), use one of existing:
            OILSEED, CEREAL, LEGUME, ROOT, NIGHTSHADE, GRASS
        -->
        <fruitType name="BARLEY">
            <rotation category="CEREAL" returnPeriod="2"/>
        </fruitType>
        <fruitType name="OAT">
            <rotation category="CEREAL" returnPeriod="2"/>
        </fruitType>
        <fruitType name="WHEAT">
            <rotation category="CEREAL" returnPeriod="2"/>
        </fruitType>
        <fruitType name="CANOLA">
            <rotation category="OILSEED" returnPeriod="3"/>
        </fruitType>
        <fruitType name="MAIZE">
            <rotation category="CEREAL" returnPeriod="1"/>
        </fruitType>
        <fruitType name="SOYBEAN">
            <rotation category="LEGUME" returnPeriod="2"/>
        </fruitType>
        <fruitType name="SUNFLOWER">
            <rotation category="OILSEED" returnPeriod="3"/>
        </fruitType>
        <fruitType name="POTATO">
            <rotation category="NIGHTSHADE" returnPeriod="3"/>
        </fruitType>
        <fruitType name="SUGARBEET">
            <rotation category="ROOT" returnPeriod="3"/>
        </fruitType>
        <fruitType name="GRASS">
            <rotation category="GRASS" returnPeriod="1"/>
        </fruitType>
        <fruitType name="OILSEEDRADISH">
            <rotation category="OILSEED" returnPeriod="2"/>
        </fruitType>
        <fruitType name="POPLAR">
            <rotation category="GRASS" returnPeriod="1"/>
        </fruitType>
        <fruitType name="SUGARCANE">
            <rotation category="GRASS" returnPeriod="2"/>
        </fruitType>
        <fruitType name="COTTON">
            <rotation category="GRASS" returnPeriod="2"/>
        </fruitType>
        <fruitType name="SORGHUM">
            <rotation category="CEREAL" returnPeriod="2"/>
        </fruitType>
        <fruitType name="GRAPE">
            <rotation category="GRASS" returnPeriod="1"/>
        </fruitType>
        <fruitType name="OLIVE">
            <rotation category="GRASS" returnPeriod="1"/>
        </fruitType>
        <fruitType name="MEADOW">
            <rotation category="GRASS" returnPeriod="1"/>
        </fruitType>
    </fruitTypes>
    <cropRotation>
        <crop category="OILSEED">
            <rotation category="OILSEED" value="1"/>
            <rotation category="CEREAL" value="2"/>
            <rotation category="LEGUME" value="2"/>
            <rotation category="ROOT" value="2"/>
            <rotation category="NIGHTSHADE" value="1"/>
            <rotation category="GRASS" value="1"/>
        </crop>
        <crop category="CEREAL">
            <rotation category="OILSEED" value="2"/>
            <rotation category="CEREAL" value="1"/>
            <rotation category="LEGUME" value="2"/>
            <rotation category="ROOT" value="1"/>
            <rotation category="NIGHTSHADE" value="0"/>
            <rotation category="GRASS" value="2"/>
        </crop>
        <crop category="LEGUME">
            <rotation category="OILSEED" value="1"/>
            <rotation category="CEREAL" value="1"/>
            <rotation category="LEGUME" value="1"/>
            <rotation category="ROOT" value="1"/>
            <rotation category="NIGHTSHADE" value="1"/>
            <rotation category="GRASS" value="1"/>
        </crop>
        <crop category="ROOT">
            <rotation category="OILSEED" value="0"/>
            <rotation category="CEREAL" value="2"/>
            <rotation category="LEGUME" value="1"/>
            <rotation category="ROOT" value="1"/>
            <rotation category="NIGHTSHADE" value="0"/>
            <rotation category="GRASS" value="0"/>
        </crop>
        <crop category="NIGHTSHADE">
            <rotation category="OILSEED" value="1"/>
            <rotation category="CEREAL" value="1"/>
            <rotation category="LEGUME" value="0"/>
            <rotation category="ROOT" value="0"/>
            <rotation category="NIGHTSHADE" value="1"/>
            <rotation category="GRASS" value="0"/>
        </crop>
        <crop category="GRASS">
            <rotation category="OILSEED" value="1"/>
            <rotation category="CEREAL" value="2"/>
            <rotation category="LEGUME" value="1"/>
            <rotation category="ROOT" value="1"/>
            <rotation category="NIGHTSHADE" value="1"/>
            <rotation category="GRASS" value="1"/>
        </crop>
    </cropRotation>
</crops>
